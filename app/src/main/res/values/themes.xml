<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_Lab_2" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/gradientEnd3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
<!--        <item name="background">@drawable/background</item>-->
        <item name="android:windowBackground">@drawable/background</item>
<!--        <item name="windowNoTitle">true</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SpecialText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#548f00</item>
        <item name="android:background">#b7e4fb</item>
    </style>

    <style name="NewText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/gradientStart1</item>
    </style>

</resources>